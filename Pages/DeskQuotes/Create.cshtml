@page
@model MegaDeskRazor.Pages.DeskQuotes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Desk Quote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            

       

            @*************************************************************************************************@

            <div class="form-group">
                <label asp-for="DeskQuote.CustomerName" class="control-label"></label>
                <input asp-for="DeskQuote.CustomerName" class="form-control" />
                <span asp-validation-for="DeskQuote.CustomerName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desk.Width" class="control-label"></label>
                <br/>
                <span>Enter a value between 24 - 96</span>
                <input asp-for="Desk.Width" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Desk.Depth" class="control-label"></label>
                <br/>
                <span>Enter a value between 12 - 48</span>
                <input asp-for="Desk.Depth" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Desk.SurfaceMaterialId" class="control-label"></label>
                <select asp-for="Desk.SurfaceMaterialId" class="form-control" asp-items="ViewBag.SurfaceMaterialId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Desk.NumDrawersId" class="control-label"></label>
                <select asp-for="Desk.NumDrawersId" class="form-control" asp-items="ViewBag.NumDrawersId"></select>
            </div>

            <div class="form-group">
                <label asp-for="DeskQuote.RushOptionId" class="control-label"></label>
                <select asp-for="DeskQuote.RushOptionId" class="form-control" asp-items="ViewBag.RushOptionId"></select>
            </div>



            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
