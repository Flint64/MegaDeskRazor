@page
@model MegaDeskRazor.Pages.DeskQuotes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DeskQuote</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DeskQuote.DeskQuoteId" />


            <div class="form-group">
                <label asp-for="Desk.Width" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Width" class="form-control" />
                <span asp-validation-for="Desk.Width" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.Depth" class="control-label"></label>
                <input asp-for="DeskQuote.Desk.Depth" class="form-control" />
                <span asp-validation-for="DeskQuote.Desk.Depth" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desk.NumDrawersId" class="control-label"></label>
                <select asp-for="Desk.NumDrawersId" class="form-control" asp-items="ViewBag.NumDrawersId"></select>
                <span asp-validation-for="Desk.NumDrawersId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desk.SurfaceMaterialId" class="control-label"></label>
                <select asp-for="Desk.SurfaceMaterialId" class="form-control" asp-items="ViewBag.SurfaceMaterialId"></select>
                <span asp-validation-for="Desk.SurfaceMaterialId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeskQuote.RushOptionId" class="control-label"></label>
                <select asp-for="DeskQuote.RushOptionId" class="form-control" asp-items="ViewBag.RushOptionId"></select>
                <span asp-validation-for="DeskQuote.RushOptionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
